@model Practica_2_PrograAvanzada.Entities.Vendedores

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "registroVendedores";
}

<main class="container mt-5">
    <h2 class="mb-3">Registro de Vendedores</h2>
    <h3 style="color:red">@ViewBag.msj</h3>
    @using (Html.BeginForm("registroVendedores", "Home"))
    {
        <div class="form-group mb-3">
            <label for="cedula">Cédula</label>
            @Html.TextBoxFor(m => m.Cedula, new { @type = "text", @class = "form-control", @placeholder = "Ingrese su cédula", @id = "cedula", @required = "required" })
        </div>
        <div class="form-group mb-3">
            <label for="nombre">Nombre</label>
            @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @class = "form-control", @placeholder = "Ingrese su nombre", @id = "nombre", @required = "required" })
        </div>
        <div class="form-group mb-3">
            <label for="correo">Correo</label>
            @Html.TextBoxFor(m => m.Correo, new { @type = "email", @class = "form-control", @placeholder = "Ingrese su correo", @id = "correo", @required = "required" })
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    }
</main>