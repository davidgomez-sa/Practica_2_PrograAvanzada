@model Practica_2_PrograAvanzada.Entities.Vehiculos

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "registroVehiculos";
}

<main class="container mt-5">
    <h2 class="mb-3">Registro de Vehículos</h2>
    <h3 style="color:red">@ViewBag.msj</h3>
    @using (Html.BeginForm("registroVehiculos", "Home"))
    {
        <div class="form-group mb-3">
            <label for="marca">Marca</label>
            @Html.TextBoxFor(m => m.Marca, new { @type = "text", @class = "form-control", @placeholder = "Ingrese la marca", @id = "marca", @required = "required" })
        </div>
        <div class="form-group mb-3">
            <label for="modelo">Modelo</label>
            @Html.TextBoxFor(m => m.Modelo, new { @type = "text", @class = "form-control", @placeholder = "Ingrese el modelo", @id = "modelo", @required = "required" })
        </div>
        <div class="form-group mb-3">
            <label for="color">Color</label>
            @Html.TextBoxFor(m => m.Color, new { @type = "text", @class = "form-control", @placeholder = "Ingrese el color", @id = "color", @required = "required" })
        </div>
        <div class="form-group mb-3">
            <label for="precio">Precio</label>
            @Html.TextBoxFor(m => m.Precio, new { @type = "number", @class = "form-control", @placeholder = "Ingrese el precio", @id = "precio", @required = "required" })
        </div>
        <div class="form-group mb-3">
            <label for="vendedor">Cédula del Vendedor</label>
            @Html.TextBoxFor(m => m.Vendedor, new { @type = "text", @class = "form-control", @placeholder = "Ingrese el nombre del vendedor", @id = "vendedor", @required = "required" })
        </div>
        <button type="submit" class="btn btn-primary">Registrar</button>
    }
</main>


